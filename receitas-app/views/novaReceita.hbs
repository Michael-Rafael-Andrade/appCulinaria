<!-- views/novaReceita.hbs -->
<h1 class="mb-4">Cadastrar Nova Receita</h1>

{{#if erros}}
<div class="alert alert-danger" role="alert">
    <strong>Oops!</strong> Por favor, corrija os erros abaixo:
    <ul>
        {{#each erros}}
        <li>{{this}}</li>
        {{/each}}
    </ul>
</div>
{{/if}}

<form method="POST" action="/receitas/nova" class="needs-validation" novalidate>
    <div class="mb-3">
        <label for="titulo" class="form-label">TÃ­tulo da Receita:</label>
        <input type="text" class="form-control {{#if erros.titulo}}is-invalid{{/if}}" id="titulo" name="titulo" required value="{{oldData.titulo}}">
        <div class="invalid-feedback">
            {{erros.titulo}}
        </div>
    </div>

    <div class="mb-3">
        <label for="ingredientes" class="form-label">Ingredientes:</label>
        <textarea class="form-control {{#if erros.ingredientes}}is-invalid{{/if}}" id="ingredientes" name="ingredientes" rows="4" required>{{oldData.ingredientes}}</textarea>
        <div class="invalid-feedback">
            {{erros.ingredientes}}
        </div>
    </div>

    <div class="mb-3">
        <label for="modoDePreparo" class="form-label">Modo de Preparo:</label>
        <textarea class="form-control {{#if erros.modoDePreparo}}is-invalid{{/if}}" id="modoDePreparo" name="modoDePreparo" rows="6" required>{{oldData.modoDePreparo}}</textarea>
        <div class="invalid-feedback">
            {{erros.modoDePreparo}}
        </div>
    </div>

    <div class="mb-4">
        <label for="tempoDePreparo" class="form-label">Tempo de preparo (em minutos):</label>
        <input type="number" class="form-control {{#if erros.tempoDePreparo}}is-invalid{{/if}}" id="tempoDePreparo" name="tempoDePreparo" required min="1" value="{{oldData.tempoDePreparo}}">
        <div class="invalid-feedback">
            {{erros.tempoDePreparo}}
        </div>
    </div>

    <button type="submit" class="btn btn-primary me-2"> Cadastrar Receita </button>
    <a href="/" class="btn btn-secondary"> Voltar para a Home </a>
</form>