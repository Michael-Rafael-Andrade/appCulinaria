<!-- views/detalheReceita.hbs -->
<h1 class="mb-4">{{receita.titulo}}</h1>

<div class="card mb-4">
    <div class="card-header">
        Detalhes da Receita
    </div>
    <div class="card-body">
        
        <p class="card-text">
            <strong><i class="bi bi-clock"></i> Tempo de Preparo:</strong> {{receita.tempoDePreparo}} minutos.
        </p>
        
        <hr>

        <h5 class="card-title mt-3">Ingredientes:</h5>
        <pre class="bg-light p-3 border rounded">
{{receita.ingredientes}}
        </pre>

        <h5 class="card-title mt-3">Modo de Preparo:</h5>
        <pre class="bg-light p-3 border rounded">
{{receita.modoDePreparo}}
        </pre>

        <hr>

        <div class="d-flex justify-content-end mt-3">
            <a href="/receitas/{{receita.id}}/alterar" class="btn btn-warning me-2">
                <i class="bi bi-pencil"></i> Alterar
            </a>
            <a href="/receitas/{{receita.id}}/excluir" class="btn btn-danger me-2">
                <i class="bi bi-x-circle"></i> Excluir
            </a>
            <a href="/" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Voltar para a Home
            </a>
        </div>
    </div>
</div>