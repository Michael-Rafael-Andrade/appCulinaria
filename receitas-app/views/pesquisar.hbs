<h1 class="mb-4">Pesquisar Receita</h1>

<form method="POST" action="/pesquisar" class="mb-5">
    <div class="input-group">
        <input type="text" class="form-control" name="termo"
            placeholder="Digite o nome de uma receita ou um ingrediente (ex: bolo, queijo, farinha)"
            value="{{termoBusca}}">
        <button class="btn btn-primary" type="submit">
            <i class="bi bi-search"></i> Buscar
        </button>
    </div>
</form>

<hr>

{{#if receitas}}

<div class="list-group">
    {{#each receitas}}
    <a href="/receitas/{{this.id}}" class="list-group-item list-group-item-action">
        {{this.titulo}}
    </a>
    {{/each}}
</div>

{{else if termoBusca}}
<div class="alert alert-warning" role="alert">
    Nenhuma receita encontrada para o termo **"{{termoBusca}}"**.
</div>
{{/if}}